{% extends 'default.html.twig' %}

{% block title %}Users{% endblock %}

{% block main %}
    <div class="row justify-content-center">
        <div class="col-12">
            <h1 class="mb-3">Users</h1>
            {% if users is empty %}
                <p>No users found</p>
            {% endif %}

            {% if users %}
                <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% endif %}
            <a href="{{ url('create_user') }}">Create a new user</a>
        </div>
    </div>
{% endblock %}