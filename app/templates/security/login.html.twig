{% extends 'default.html.twig' %}

{% block title %}Sign in!{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-4">
            <h1 class="mb-3">Please sign in</h1>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group">
                    <label for="username" class="required">Email or username</label>
                    <input type="username" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label for="password" class="required">Password</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-group">
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                </div>

                <button class="btn btn-primary" type="submit">
                    Sign in
                </button>
            </form>
        </div>
    </div>
{% endblock %}

